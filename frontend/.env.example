# Frontend Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Google Gemini API Configuration
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_API_URL_LIVE=https://your-backend-url.onrender.com/api

# Application Environment
NODE_ENV=development

# App Configuration
NEXT_PUBLIC_APP_NAME=MediLens
NEXT_PUBLIC_APP_VERSION=1.0.0

# Google Lens API
GOOGLE_LENS_API=your_google_lens_api_key_here
NEXT_PUBLIC_GOOGLE_LENS_API=your_google_lens_api_key_here

# OCR Configuration
NEXT_PUBLIC_TESSERACT_WORKER_SCRIPT=https://unpkg.com/tesseract.js@6.0.1/dist/worker.min.js
NEXT_PUBLIC_TESSERACT_LANG_DATA=https://unpkg.com/tesseract.js-core@6.0.1/tesseract-core-lstm.wasm.js

# Frontend URLs
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_FRONTEND_URL_LIVE=https://your-vercel-deployment-url.vercel.app